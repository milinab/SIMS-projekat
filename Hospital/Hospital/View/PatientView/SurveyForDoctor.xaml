            <ItemsControl Name="icTodoList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="40,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding QuestionText}" Margin="0,0,0,20" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
